<application>
  <component name="ActionMacroManager">
    <macro name="&lt;noname&gt;">
      <action id="EditorMatchBrace" />
      <action id="EditorMatchBrace" />
      <action id="EditorLeft" />
      <typing text-keycode="45:0;45:0">--</typing>
      <action id="EditorMatchBrace" />
      <action id="EditorRight" />
      <typing text-keycode="49:1;45:0;45:0">!--</typing>
      <action id="EditorNextWord" />
    </macro>
    <macro name="column to list">
      <action id="EditorLineEnd" />
      <typing text-keycode="44:0">,</typing>
      <action id="EditorDeleteToWordEnd" />
      <action id="EditorNextWordWithSelection" />
      <action id="EditorPreviousWordWithSelection" />
      <typing text-keycode="520:0">#</typing>
      <action id="EditorBackSpace" />
      <action id="EditorLineEnd" />
    </macro>
    <macro name="column to quoted list">
      <action id="EditorLineEnd" />
      <action id="EditorPreviousWord" />
      <typing text-keycode="222:0">'</typing>
      <action id="EditorLineEnd" />
      <typing text-keycode="222:0;44:0">',</typing>
      <action id="EditorDeleteToWordEnd" />
      <action id="EditorNextWordWithSelection" />
      <action id="EditorPreviousWordWithSelection" />
      <typing text-keycode="520:0">#</typing>
      <action id="EditorBackSpace" />
    </macro>
  </component>
</application>